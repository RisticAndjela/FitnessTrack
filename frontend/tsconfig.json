{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "baseUrl": ".",
    "target": "ES6", 
    "experimentalDecorators": true,  
    "emitDecoratorMetadata": true,   
    "moduleResolution": "bundler",      
    "esModuleInterop": true          
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
